# REdI Email Processing API - Environment Variables Template
# Copy this file to .env and fill in your actual values
# Author: Sean Wing
# Date: 2026-01-02

# ============================================================================
# OpenAI Configuration
# ============================================================================

# Your OpenAI API key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-your-key-here

# OpenAI model to use (gpt-4o, gpt-4-turbo, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o

# Temperature setting (0 = deterministic, 1 = creative)
OPENAI_TEMPERATURE=0

# Maximum tokens in GPT response
OPENAI_MAX_TOKENS=1000

# ============================================================================
# API Security
# ============================================================================

# API key for authenticating requests to this API
# Generate a secure random key with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
REDI_API_KEY=your-secure-api-key-here

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL database name
POSTGRES_DB=redi_emails

# PostgreSQL username
POSTGRES_USER=redi

# PostgreSQL password (use a strong password in production!)
POSTGRES_PASSWORD=changeme

# ============================================================================
# Confidence Thresholds
# ============================================================================

# High confidence threshold (0.8 = 80%)
CONFIDENCE_THRESHOLD_HIGH=0.8

# Moderate confidence threshold (0.5 = 50%)
CONFIDENCE_THRESHOLD_MODERATE=0.5

# Low confidence threshold (0.3 = 30%)
CONFIDENCE_THRESHOLD_LOW=0.3

# ============================================================================
# Application Settings
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Flask environment (development, production)
FLASK_ENV=production

# Flask debug mode (true, false)
FLASK_DEBUG=false

# ============================================================================
# Optional: pgAdmin Configuration (only needed with --profile admin)
# ============================================================================

# pgAdmin login email
PGADMIN_EMAIL=admin@redi.local

# pgAdmin login password
PGADMIN_PASSWORD=admin
